@model IEnumerable<Inky.Gamey.Data.Game>

@{
    ViewData["Title"] = "Games";

    var usr = (ApplicationUser)ViewData["ApplicationUser"];
}

<h2>Games</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @*If current user created this game, allow them to edit it *@
                @if(item.CreatedBy == usr.Id)
                {
                <div>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </div>
                }
            </td>
        </tr>
}
    </tbody>
</table>
